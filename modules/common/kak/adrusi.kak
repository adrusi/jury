# For Code
face global value     blue+b
face global type      blue+i
face global variable  magenta+i
face global module    white
face global function  magenta+i
face global string    magenta
face global keyword   cyan
face global operator  cyan+b
face global attribute cyan+i
face global comment   white+i
face global meta      white+b
face global builtin   default

# For markup
face global title  default+b
face global header default+b
face global bold   white+b
face global italic default+i
face global mono   magenta
face global block  magenta
face global link   cyan+u
face global bullet default+b
face global list   default

# builtin faces
face global Default            default,default
face global PrimarySelection   black,cyan,magenta+ufba
face global SecondarySelection black,cyan+fb
face global PrimaryCursor      black,magenta+fb
face global SecondaryCursor    black,bright-white+fb
face global PrimaryCursorEol   black,bright-magenta+fb
face global SecondaryCursorEol black,white+fb
face global LineNumbers        magenta,default
face global LineNumbersWrapped cyan,default+d
face global WrapMarker         cyan,default,default+bd
face global LineNumberCursor   default,rgb:111111+g
face global MenuForeground     black,magenta
face global MenuBackground     black,cyan
face global MenuInfo           bright-black,bright-cyan
face global Error              default,default,red+c
face global Information        black,bright-white
face global StatusLine         black,cyan+i
face global StatusLineMode     black,default+b
face global StatusLineInfo     black,default
face global StatusLineValue    black,default
face global StatusCursor       default,magenta
face global Prompt             black,bright-white+f
face global MatchingChar       black,cyan
face global BufferPadding      default,default
face global Whitespace         bright-black,default,default+dbf

# lsp
face global DiagnosticHint            default,default,bright-black+ca
face global DiagnosticInfo            default,default,white+ca
face global DiagnosticWarning         default,default,yellow+ca
face global DiagnosticError           default,default,red+ca
face global InlayDiagnosticHint       white,default,default+d
face global InlayDiagnosticInfo       white,default,default
face global InlayDiagnosticWarning    yellow,default,default+d
face global InlayDiagnosticError      red,default,default+d
face global InlayHint                 bright-black,default,default
face global LineFlagHint              bright-white,default,default+b
face global LineFlagInfo              bright-white,default,default+b
face global LineFlagWarning           yellow,default,default
face global LineFlagError             red,default,default
face global Reference                 default,default,white+u
face global ReferenceBind             default,default,bright-white+ub
face global SnippetsOtherPlaceholders cyan,magenta,default+biF
face global SnippetsNextPlaceholders  magenta,cyan,default+biF
